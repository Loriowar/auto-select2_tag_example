!!! 5
%html
  %head
    %title AutoSelect2TagExample
    %meta{http_equiv: 'cleartype', content: 'on'}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %body{class: body_classes}
      #page
        %header#header.header{role: 'banner'}
        #main
          #content.column{role: 'main'}
            = yield
          #navigation
            = render partial: '/layouts/main_menu'
          - if content_for?(:sidebar_first) || content_for?(:sidebar_second)
            %aside.sidebars
              = render partial: '/layouts/sidebar', locals: { sidebar_id: :sidebar_first }
              = render partial: '/layouts/sidebar', locals: { sidebar_id: :sidebar_second }